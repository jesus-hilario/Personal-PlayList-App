<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpashActivity"
    android:background= "@drawable/spashscreen_cover_art">

    <ImageView
        android:id="@+id/imgAntonVlasov"
        android:layout_width="180dp"
        android:layout_height="213dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="7dp"
        app:srcCompat="@drawable/anton_vlasov_cover_art" />

    <ImageView
        android:id="@+id/imgElenamiv"
        android:layout_width="293dp"
        android:layout_height="204dp"
        android:layout_below="@+id/imgAntonVlasov"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-46dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="163dp"
        android:layout_marginRight="163dp"
        android:layout_marginBottom="297dp"
        app:srcCompat="@drawable/elenamiv_cover_art" />

    <ImageView
        android:id="@+id/imgRomanStiga"
        android:layout_width="199dp"
        android:layout_height="186dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="188dp"
        android:layout_marginRight="188dp"
        android:layout_marginBottom="96dp"
        app:srcCompat="@drawable/roman_striga_art_cover" />

    <Button
        android:id="@+id/btnPlaySongOne"
        android:layout_width="116dp"
        android:layout_height="92dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toEndOf="@+id/imgAntonVlasov"
        android:layout_toRightOf="@+id/imgAntonVlasov"
        android:text="@string/txtSongTitleOne" />

    <Button
        android:id="@+id/btnPlaySongTwo"
        android:layout_width="114dp"
        android:layout_height="97dp"
        android:layout_below="@+id/btnPlaySongOne"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/txtSongTitleTwo" />

    <Button
        android:id="@+id/btnPlaySongThree"
        android:layout_width="146dp"
        android:layout_height="116dp"
        android:layout_below="@+id/btnPlaySongTwo"
        android:layout_alignStart="@+id/imgRomanStiga"
        android:layout_alignLeft="@+id/imgRomanStiga"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="233dp"
        android:layout_marginLeft="233dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="113dp"
        android:text="@string/txtSongTitleThree" />
</RelativeLayout>